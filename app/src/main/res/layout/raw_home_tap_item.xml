<?xml
    version="1.0"
    encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/btn_add_selected"
    android:layout_height="?actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/tv_tapName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_orderCount"
        android:layout_marginStart="@dimen/_16sdp"
        android:text="الطلبات الجديدة"
        android:gravity="center"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/cairo_semibold"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:id="@+id/tv_orderCount"
        app:layout_constraintTop_toTopOf="parent"
        android:text="7"
        android:layout_marginStart="@dimen/_16sdp"
        android:background="@drawable/cart_count_bg"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/cairo_semibold"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>