<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgOfferAndFeature"
        android:layout_width="match_parent"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        android:layout_height="@dimen/_110sdp"
        android:src="@drawable/app_logo"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/offerAndFeatureName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/cairo_semibold"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:textSize="@dimen/_12ssp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgOfferAndFeature"
        tools:text="Mohamed Mohamed MohamedMohamedMohamedMohamed" />

    <TextView
        android:id="@+id/offerAndFeatureDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/cairo_semibold"
        android:textColor="@color/grey"
        android:ellipsize="end"
        android:textSize="@dimen/_12ssp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/offerAndFeatureName"
        tools:text="Mohamed Mohamed MohamedMohamedMohamedMohamed" />

    <TextView
        android:id="@+id/offerAndFeatureDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_8sdp"
        android:fontFamily="@font/cairo_semibold"
        android:textColor="@color/grey"
        android:ellipsize="end"
        android:textSize="@dimen/_12ssp"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/offerAndFeatureDate"
        tools:text="Mohamed Mohamed MohamedMohamedMohamedMohamed" />

</androidx.constraintlayout.widget.ConstraintLayout>