<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.marketingRequest.MarketingRequestFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPinStoryHomePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:elevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center_vertical"
            android:padding="@dimen/_6sdp"
            android:text="@string/pin_a_story_to_the_home_page"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:drawableStartCompat="@drawable/ic_pin_item_marketing_request" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPinStoryOffersPage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:elevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="@+id/cvPinStoryHomePage"
        app:layout_constraintEnd_toEndOf="@id/cvPinStoryHomePage"
        app:layout_constraintTop_toBottomOf="@+id/cvPinStoryHomePage">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center_vertical"
            android:padding="@dimen/_6sdp"
            android:text="@string/pin_a_story_to_the_offers_page"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:drawableStartCompat="@drawable/ic_pin_item_marketing_request" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvShowStorePage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:elevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="@+id/cvPinStoryOffersPage"
        app:layout_constraintEnd_toEndOf="@id/cvPinStoryOffersPage"
        app:layout_constraintTop_toBottomOf="@+id/cvPinStoryOffersPage">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center_vertical"
            android:padding="@dimen/_6sdp"
            android:text="@string/show_a_on_the_store_page"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:drawableStartCompat="@drawable/ic_pin_item_marketing_request" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>