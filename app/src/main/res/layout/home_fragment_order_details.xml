<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.brandsin.store.ui.main.orderdetails.OrderDetailsViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Order Details Layout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                isFull="@{viewModel.obsIsFull}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_12sdp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/order_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:focusable="true"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/grey_subcategory"
                    app:strokeWidth="@dimen/_1sdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_12sdp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/img_layout"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_12sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_notifyImg"
                                setImage="@{viewModel.orderDetails.order.user.picture}"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_4sdp"
                                android:gravity="top|center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_6ssp"
                                android:textStyle="bold"
                                tools:src="@drawable/new_icon" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:fontFamily="@font/cairo_semibold"
                            android:lines="1"
                            app:set_marquee="@{true}"
                            android:maxLines="1"
                            android:text="@{viewModel.obsUserName}"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            app:layout_constraintEnd_toStartOf="@id/whatsApp"
                            app:layout_constraintStart_toEndOf="@+id/img_layout"
                            app:layout_constraintTop_toTopOf="@+id/img_layout"
                            tools:text="Mohamed Mohamed" />

                        <TextView
                            android:id="@+id/tv_desc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_8sdp"

                            android:fontFamily="@font/cairoregular"

                            android:text="@{viewModel.obsOrderNumber}"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintEnd_toStartOf="@id/whatsApp"
                            app:layout_constraintStart_toEndOf="@+id/img_layout"
                            app:layout_constraintTop_toBottomOf="@+id/tv_title"
                            tools:text="رقم الطلب : #125634" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:fontFamily="@font/cairoregular"
                            android:text="@{viewModel.orderDetails.order.deliveryTime}"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/whatsApp"
                            app:layout_constraintStart_toEndOf="@+id/img_layout"
                            app:layout_constraintTop_toBottomOf="@+id/tv_desc"
                            tools:text="22/12/2020  10:50" />

                        <TextView
                            android:id="@+id/whatsApp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:duplicateParentState="false"
                            android:fontFamily="@font/cairo_semibold"
                            android:gravity="center"
                            android:text="@string/chat"
                            android:textColor="@color/completed"
                            android:textSize="@dimen/_12ssp"
                            app:drawableTopCompat="@drawable/ic_circle_whatsapp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_call"
                            app:layout_constraintTop_toTopOf="@id/tv_title"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/tv_call"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:duplicateParentState="false"
                            android:fontFamily="@font/cairo_semibold"
                            android:gravity="center"
                            android:onClick="@{() -> viewModel.onCallImgClicked()}"
                            android:text="@string/call"
                            android:textColor="@color/color_primary"
                            android:textSize="@dimen/_12ssp"
                            app:drawableTopCompat="@drawable/ic_circle_call"
                            app:layout_constraintBottom_toBottomOf="@id/whatsApp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_title" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icChat"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            app:srcCompat="@drawable/ic_fill_chat"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/whatsApp"
                            app:layout_constraintTop_toBottomOf="@id/whatsApp" />

                        <!--<TextView
                            android:id="@+id/tv_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:duplicateParentState="false"
                            android:fontFamily="@font/cairo_semibold"
                            android:onClick="@{() -> viewModel.onCallTextClicked()}"
                            android:text="@string/call"
                            android:textAlignment="viewStart"
                            app:layout_constraintTop_toTopOf="@id/tv_title"
                            android:textColor="#00C7BD"
                            android:textSize="@dimen/_12ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <ImageView
                            android:id="@+id/iv_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:duplicateParentState="false"
                            android:onClick="@{() -> viewModel.onCallImgClicked()}"
                            android:src="@drawable/ic_phone"
                            app:layout_constraintTop_toTopOf="@id/tv_title"
                            app:layout_constraintBottom_toTopOf="@+id/tv_call"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:ignore="ContentDescription" />-->

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/orderDetails_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/order_layout">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/about_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/orderContents_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/order_conents_border"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_contents"
                                adapter="@{viewModel.orderContentsAdapter}"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/_12sdp"
                                android:paddingEnd="@dimen/_12sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:itemCount="2"
                                tools:listitem="@layout/raw_order_content" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/orderCosts_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_16sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingEnd="@dimen/_16sdp"
                            android:paddingBottom="@dimen/_16sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/orderContents_layout">

                            <TextView
                                android:id="@+id/txtTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@string/sub_total"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@{viewModel.obsSubTotal + ` ` + @string/currency}"
                                android:textAlignment="viewStart"
                                android:textColor="#4DA6FF"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="200.0 SAR" />

                            <TextView
                                android:id="@+id/txtDiscountCoupon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@string/discount_coupons"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtTotal" />

                            <TextView
                                android:id="@+id/discountCoupon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@{viewModel.obsDiscountCoupon + ` ` + @string/currency}"
                                android:textAlignment="viewStart"
                                android:textColor="#4DA6FF"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/total"
                                tools:text="200.0 SAR" />

                            <TextView
                                android:id="@+id/text_delivery_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@string/delivery_fee"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtDiscountCoupon" />

                            <TextView
                                android:id="@+id/tv_delivery_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@{viewModel.obsDeliveryPrice + ` ` + @string/currency}"
                                android:textAlignment="viewStart"
                                android:textColor="#4DA6FF"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/discountCoupon"
                                tools:text="200.0 SAR" />

                            <TextView
                                android:id="@+id/txtPackagingPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@string/packaging"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/text_delivery_price" />

                            <TextView
                                android:id="@+id/packagingPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@{viewModel.obsPackagingPrice + ` ` + @string/currency}"
                                android:textAlignment="viewStart"
                                android:textColor="#4DA6FF"
                                android:textSize="@dimen/_12ssp"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_delivery_price"
                                tools:text="200.0 SAR" />

                            <TextView
                                android:id="@+id/text_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@string/total"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtPackagingPrice" />

                            <TextView
                                android:id="@+id/tv_totalPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@{viewModel.obsTotal + ` ` + @string/currency}"
                                android:textAlignment="viewStart"
                                android:textColor="#4DA6FF"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/packagingPrice"
                                tools:text="200.0 SAR" />

                            <TextView
                                android:id="@+id/text_payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@string/payment_way"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/text_total" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@{viewModel.obsPaymentWay}"
                                android:textAlignment="viewStart"
                                android:textColor="@color/hint_color"
                                android:textSize="@dimen/_10ssp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_totalPrice"
                                tools:text="@string/wallet" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/white"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/text_orders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_bold"
                            android:text="@string/orders"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/cairoregular"
                            android:text="@string/review_orders_first"
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/text_orders"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/orderNotes_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/order_conents_border"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/orderDetails_layout">

                    <TextView
                        android:id="@+id/et_additional_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/cairoregular"
                        android:gravity="center|start"
                        android:hint="@string/write_here"
                        android:text="@{viewModel.orderDetails.order.userNotes}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_note_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/white"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/orderDetails_layout">

                    <TextView
                        android:id="@+id/text_additional_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/additional_notes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/text_storeLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="@string/order_address"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/orderNotes_layout" />

                <TextView
                    android:id="@+id/tv_storeLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/cairo_semibold"
                    android:lineSpacingExtra="-8dp"
                    android:text="@{viewModel.orderDetails.order.streetName}"
                    android:textAlignment="viewStart"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintStart_toStartOf="@id/text_storeLocation"
                    app:layout_constraintTop_toBottomOf="@+id/text_storeLocation" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/orderMap_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@drawable/about_bg"
                    android:backgroundTint="@color/grey_subcategory"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:layout_constraintStart_toStartOf="@+id/tv_storeLocation"
                    app:layout_constraintTop_toBottomOf="@id/tv_storeLocation">

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/map_view"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

                <RadioGroup
                    android:id="@+id/rg_accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/orderMap_layout">

                    <RadioButton
                        android:id="@+id/rb_acceptonly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:fontFamily="@font/cairoregular"
                        android:text="@string/accept_with_delivering_order"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/tv_ٌRedioDes1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:fontFamily="@font/cairo_semibold"
                        android:text="@string/tv_ٌRedioDes1"
                        android:textAlignment="viewStart"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_10ssp" />

                    <RadioButton
                        android:id="@+id/rb_acceptwithdelivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairoregular"
                        android:text="@string/accept_without_delivering_order"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/tv_ٌRedioDes2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:fontFamily="@font/cairo_semibold"
                        android:text="@string/tv_ٌRedioDes2"
                        android:textAlignment="viewStart"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_10ssp" />

                </RadioGroup>

                <LinearLayout
                    android:id="@+id/btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rg_accept">

                    <!-- android:onClick="@{() -> viewModel.onCancelClicked()}" -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_accept"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="3"
                        android:clickable="@{viewModel.obsIsClickable}"
                        android:fontFamily="@font/cairo_semibold"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:onClick="@{() -> viewModel.onPrepareClicked()}"
                        android:text="@string/prepare_order"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        app:cornerRadius="@dimen/_6sdp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReject"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="2"
                        app:set_redOutline="@{true}"
                        android:clickable="@{viewModel.obsIsClickable}"
                        android:fontFamily="@font/cairo_semibold"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/reject_order"
                        android:textAllCaps="false"
                        android:textColor="@color/color_primary"
                        android:textSize="@dimen/_12ssp"
                        app:cornerRadius="@dimen/_6sdp"
                        app:strokeColor="@color/color_primary"
                        app:strokeWidth="@dimen/_1sdp" />
                </LinearLayout>

                <ProgressBar
                    visibleGone="@{viewModel.obsIsVisible}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Shimmer Layout -->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerFrameLayout"
                isLoading="@{viewModel.obsIsLoading}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#FAFAFA"
                android:orientation="vertical"
                android:paddingTop="@dimen/_8sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Adding 15 rows of placeholders -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/shimmer_order_details" />

                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>